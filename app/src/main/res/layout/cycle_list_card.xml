<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:minHeight="88dp"
    android:paddingHorizontal="16dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/reviewDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:maxLines="1"
            android:textColor="@color/textColor"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:text="Shake The Booty"/>

        <TextView
            android:id="@+id/reviewScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingVertical="2dp"
            android:textColor="@color/textColor"
            android:textAppearance="?attr/textAppearanceBody2"
            android:text="Training"/>

        <TextView
            android:id="@+id/reviewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:maxLines="1"
            android:textColor="@color/textColor"
            android:textAppearance="?attr/textAppearanceBody2"
            android:text="It's time to move the ass!"/>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/cycleDetailButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:src="@drawable/baseline_keyboard_arrow_right_black_18dp"/>

</LinearLayout>